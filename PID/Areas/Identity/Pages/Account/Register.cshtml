@page
@model RegisterModel
@{
    ViewData["Title"] = "Criar nova conta";
    Layout = "~/Views/Shared/PublicLayout.cshtml";
}

<div class="login-container">
    <div class="login-box">
        <div class="text-center mb-4">
            <img src="/img/logo-white.png" alt="Logo Águia" class="login-logo" />
            <h2>@ViewData["Title"]</h2>
        </div>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.Email" class="form-control ps-5" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <i class="fa fa-envelope input-icon"></i>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.Password" class="form-control ps-5" autocomplete="new-password" aria-required="true" placeholder="senha" />
                <label asp-for="Input.Password" class="form-label">Senha</label>
                <i class="fa fa-lock input-icon"></i>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.ConfirmPassword" class="form-control ps-5" autocomplete="new-password" aria-required="true" placeholder="confirmar senha" />
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar senha</label>
                <i class="fa fa-lock input-icon"></i>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Criar conta</button>

            <div class="mt-3 text-center login-links">
                <p>Já tem uma conta? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Entrar</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
