@page
@model RegisterModel
@{
    ViewData["Title"] = "Criar nova conta";
    Layout = "~/Views/Shared/PublicLayout.cshtml";
}

<div class="login-container">
    <div class="login-box">
        <div class="text-center mb-4">
            <img src="/img/logo-white.png" alt="Logo Águia" class="login-logo" />
            <h2>@ViewData["Title"]</h2>
        </div>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.NomeCompleto" class="form-control ps-5" placeholder="Nome completo" />
                <label asp-for="Input.NomeCompleto">Nome completo</label>
                <i class="fa fa-user input-icon"></i>
                <span asp-validation-for="Input.NomeCompleto" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.Cargo" class="form-control ps-5" placeholder="Cargo" />
                <label asp-for="Input.Cargo">Cargo</label>
                <i class="fa fa-briefcase input-icon"></i>
                <span asp-validation-for="Input.Cargo" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.Departamento" class="form-control ps-5" placeholder="Departamento" />
                <label asp-for="Input.Departamento">Departamento</label>
                <i class="fa fa-building input-icon"></i>
                <span asp-validation-for="Input.Departamento" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.FotoUrl" class="form-control ps-5" placeholder="URL da foto" />
                <label asp-for="Input.FotoUrl">URL da foto</label>
                <i class="fa fa-image input-icon"></i>
                <span asp-validation-for="Input.FotoUrl" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.NivelPermissao" class="form-control ps-5" placeholder="Permissão" />
                <label asp-for="Input.NivelPermissao">Nível de permissão</label>
                <i class="fa fa-key input-icon"></i>
                <span asp-validation-for="Input.NivelPermissao" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.Email" class="form-control ps-5" autocomplete="email" placeholder="Email" />
                <label asp-for="Input.Email">Email</label>
                <i class="fa fa-envelope input-icon"></i>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.Password" class="form-control ps-5" autocomplete="new-password" placeholder="Senha" />
                <label asp-for="Input.Password">Senha</label>
                <i class="fa fa-lock input-icon"></i>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.ConfirmPassword" class="form-control ps-5" autocomplete="new-password" placeholder="Confirmar senha" />
                <label asp-for="Input.ConfirmPassword">Confirmar senha</label>
                <i class="fa fa-lock input-icon"></i>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Criar conta</button>

            <div class="mt-3 text-center login-links">
                <p>Já tem uma conta? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Entrar</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
