@model PID.Models.Desenvolvimento

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-md-12 text-center">
            <h1 class="display-2 fw-bold">Criar Novo Desenvolvimento</h1>
            <p class="lead mt-3">Preencha as informações abaixo para cadastrar um novo desenvolvimento.</p>
        </div>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label"></label>
                    <textarea asp-for="Descricao" class="form-control"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="Classificacao" class="form-label"></label>
                    <input asp-for="Classificacao" class="form-control" />
                    <span asp-validation-for="Classificacao" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Dificuldade" class="form-label"></label>
                    <input asp-for="Dificuldade" class="form-control" />
                    <span asp-validation-for="Dificuldade" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Produto" class="form-label"></label>
                    <input asp-for="Produto" class="form-control" />
                    <span asp-validation-for="Produto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ERP" class="form-label"></label>
                    <input asp-for="ERP" class="form-control" />
                    <span asp-validation-for="ERP" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataInicio" class="form-label"></label>
                    <input asp-for="DataInicio" type="date" class="form-control" />
                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataFim" class="form-label"></label>
                    <input asp-for="DataFim" type="date" class="form-control" />
                    <span asp-validation-for="DataFim" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="ProjetoFinep" />
                    <label class="form-check-label" asp-for="ProjetoFinep"></label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="ProjetoLeiBem" />
                    <label class="form-check-label" asp-for="ProjetoLeiBem"></label>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Solicitante" class="form-label"></label>
                    <input asp-for="Solicitante" class="form-control" />
                    <span asp-validation-for="Solicitante" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProjetoPDId" class="form-label"></label>
                    <select asp-for="ProjetoPDId" class="form-select" asp-items="ViewBag.ProjetoPDId">
                        <option value="">Selecione um Projeto</option>
                    </select>
                    <span asp-validation-for="ProjetoPDId" class="text-danger"></span>
                </div>


                <div class="text-center">
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Criar Desenvolvimento</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fas fa-arrow-left"></i> Voltar para Lista</a>
                </div>
            </form>


            @if (ViewBag.ModelStateErros != null && ((List<string>)ViewBag.ModelStateErros).Any())
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var erro in (List<string>)ViewBag.ModelStateErros)
                        {
                            <li>@erro</li>
                        }
                    </ul>
                </div>
            }


        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 30px rgba(0,0,0,0.2);
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
</style>
