@model PID.Models.Custo

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-md-12 text-center">
            <h1 class="display-2 fw-bold">Editar Custo</h1>
            <p class="lead mt-3">Atualize as informações abaixo do custo selecionado.</p>
        </div>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="IdDispendio" class="form-label"></label>
                    <select asp-for="IdDispendio" class="form-control" asp-items="ViewBag.IdDispendio">
                        <option value="">-- Selecione um Dispendio --</option>
                    </select>
                    <span asp-validation-for="IdDispendio" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdDesenvolvimento" class="form-label"></label>
                    <select asp-for="IdDesenvolvimento" class="form-control" asp-items="ViewBag.IdDesenvolvimento">
                        <option value="">-- Selecione um Desenvolvimento --</option>
                    </select>
                    <span asp-validation-for="IdDesenvolvimento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Valor" class="form-label"></label>
                    <input asp-for="Valor" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Data" class="form-label"></label>
                    <input asp-for="Data" class="form-control" type="datetime-local" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Salvar Alterações</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fas fa-arrow-left"></i> Voltar para Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 30px rgba(0,0,0,0.2);
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
</style>
