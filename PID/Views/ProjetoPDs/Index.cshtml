@model IEnumerable<PID.Models.ProjetoPD>

<h1>Projetos P&D</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="input-group w-50">
        <input type="text" id="searchInput" class="form-control" placeholder="Procurar projeto...">
        <button class="btn btn-outline-primary" type="button"><i class="fas fa-search"></i></button>
    </div>
    <a asp-action="Create" class="btn btn-primary">+ Novo Projeto</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th> <!-- Adicionando a coluna do ID -->
            <th>Ações</th>
            <th>@Html.DisplayNameFor(model => model.Ano)</th>
            <th>@Html.DisplayNameFor(model => model.Desenvolvimento)</th>
            <th>@Html.DisplayNameFor(model => model.Dispendio)</th>
            <th>@Html.DisplayNameFor(model => model.ProjetoFinep)</th>
            <th>@Html.DisplayNameFor(model => model.ProjetoLeiBem)</th>
        </tr>
    </thead>
    <tbody id="projectTable">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td> <!-- Exibindo o ID do projeto -->
                <td>
                    <div class="dropdown">
                        <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-cogs"></i> Ações
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Editar</a></li>
                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">Detalhes</a></li>
                            <li>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Tem certeza que deseja excluir este projeto?');">
                                    <button type="submit" class="dropdown-item text-danger">Excluir</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </td>
                <td>@Html.DisplayFor(modelItem => item.Ano)</td>
                <td>@Html.DisplayFor(modelItem => item.Desenvolvimento.Classificacao)</td>
                <td>@Html.DisplayFor(modelItem => item.Dispendio.Descricao)</td>
                <td>@(item.ProjetoFinep ? "✔" : "")</td>
                <td>@(item.ProjetoLeiBem ? "✔" : "")</td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.getElementById("searchInput").addEventListener("keyup", function () {
        let filter = this.value.toLowerCase();
        let rows = document.getElementById("projectTable").getElementsByTagName("tr");

        for (let i = 0; i < rows.length; i++) {
            let rowText = rows[i].innerText.toLowerCase();
            rows[i].style.display = rowText.includes(filter) ? "" : "none";
        }
    });
</script>
