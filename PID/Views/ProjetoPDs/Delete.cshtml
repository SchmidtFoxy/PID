@model PID.Models.ProjetoPD

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir Projeto</h1>

<h3>Tem certeza que deseja excluir este projeto?</h3>
<div>
    <h4>ProjetoPD</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ano)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ano)
        </dd>
        <dt class="col-sm-2">
            Desenvolvimentos
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var desenvolvimento in Model.Desenvolvimentos)
                {
                    <li>@desenvolvimento.Classificacao - @desenvolvimento.Produto</li>
                }
            </ul>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dispendio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dispendio.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjetoFinep)
        </dt>
        <dd class="col-sm-10">
            @(Model.ProjetoFinep ? "✔" : "✘")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjetoLeiBem)
        </dt>
        <dd class="col-sm-10">
            @(Model.ProjetoLeiBem ? "✔" : "✘")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para Lista</a>
    </form>
</div>